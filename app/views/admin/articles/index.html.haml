.content-box-header
  %h3 Listing articles
.content-box-content
  = link_to 'New Article', new_admin_article_path ,:class => 'button'
  %label
    = label_tag :category
    = select_tag :category_id, options_for_select(Category.all.collect{|b| [b.name,b.id]},params[:id]),
      :id => "cbx_category", :class => "category_select", :prompt => "Select category"
  %table
    %thead
      %tr
        %th
          %input.check-all{:type => 'checkbox'}
        %th Name
        - @language=Language.all
        - @language.each do |language|
          %th
            =language.language_code
        %th Actions
    %tfoot
      %tr
        %td{:colspan => '6'}
          .bulk-actions.align-left
            %select{:name => 'dropdown'}
              %option{:value => 'option1'} Choose an action...
              %option{:value => 'option2'} Edit
              %option{:value => 'option3'} Delete
            %a.button{:href => '#'} Apply to selected
          .pagination
            %a{:href => '#', :title => 'First Page'} &laquo; First
            %a{:href => '#', :title => 'Previous Page'} &laquo; Previous
            %a.number{:href => '#', :title => '1'} 1
            %a.number{:href => '#', :title => '2'} 2
            %a.number.current{:href => '#', :title => '3'} 3
            %a.number{:href => '#', :title => '4'} 4
            %a{:href => '#', :title => 'Next Page'} Next &raquo;
            %a{:href => '#', :title => 'Last Page'} Last &raquo;
          / End .pagination
          .clear
    %tbody
      - unless @articles.nil?
        - @articles.each do |article|
          %tr
            %td
              %input{:type => 'checkbox'}/
            %td
              = link_to(article.name, admin_article_path(article))
            %td= article.try(:name)
            - @language=Language.all
            - @language.each do |language|
              %th
                - @article_language=ArticleLanguage.where(:article_id=>article.id,:language_id=>language.id).first()
                -if @article_language.nil?
                  = link_to(image_tag('admin/icon_add.png'), new_admin_article_language_path(:id_arti=>article.id,:id_lang=>language.id))
                -else
                  = link_to(image_tag('admin/icon_edit.gif'), edit_admin_article_language_path(@article_language))
            %td
              / Icons
              = link_to(image_tag('admin/icon_view.gif'), admin_article_path(article))
              = link_to(image_tag('admin/icon_edit.gif'), edit_admin_article_path(article))
              = link_to(image_tag('admin/icon_delete.gif'), admin_article_path(article), :confirm => 'Are You sure?', :method => :delete)
