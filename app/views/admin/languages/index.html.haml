    %tbody
      - @language.each do |language|
        %tr
          %td
            %input{:type => 'checkbox'}
          %td
            = link_to(language.name, admin_language_path(language))
          %td= language.language_code
          %td
            -if(language.enable)
              %input{:checked => '', :disabled => '', :type => 'checkbox'}
            -else
              %input{:disabled => '', :type => 'checkbox'}
          %td
            -if(language.default)
              %input{:checked => '', :disabled => '', :type => 'checkbox'}
            -else
              %input{:disabled => '', :type => 'checkbox'}
          %td
            / Icons
            = link_to(image_tag('admin/icon_view.gif'), admin_language_path(language))
            = link_to(image_tag('admin/icon_edit.gif'), edit_admin_language_path(language))
            = link_to(image_tag('admin/icon_delete.gif'), admin_language_path(language), :confirm => 'Are you sure?', :method => :delete)
