.content-box-header
  %h3 Detail language
.content-box-content
  %p
    %strong Name:
    = @language.name
  %p
    %strong Language code:
    = @language.language_code
  %p
    %strong Description:
    = @language.description
  %p
    %strong Enable:
    -if(@language.enable)
      %input{:checked => '', :disabled => '', :type => 'checkbox'}
    -else
      %input{:disabled => '', :type => 'checkbox'}
  %p
    %strong Default:
    -if(@language.default)
      %input{:checked => '', :disabled => '', :type => 'checkbox'}
    -else
      %input{:disabled => '', :type => 'checkbox'}
  = link_to 'Edit', edit_admin_language_path(@language),:class => 'button'
  = link_to 'Back', admin_languages_path,:class => 'button'