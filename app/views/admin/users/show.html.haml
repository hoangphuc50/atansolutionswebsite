.content-box-header
  %h3 Detail user
.content-box-content
  %p
    %strong Name:
    = @users.name
  %p
    %strong Email:
    = @users.email
  = link_to 'Edit', edit_admin_user_path(@users),:class => 'button'
  = link_to 'Reset password', "/admin/resetpassword?id=#{@users.id}",:confirm => 'Reset password. Are you sure?',:class => 'button'
  = link_to 'Back', admin_users_path,:class => 'button'